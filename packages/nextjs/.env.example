# Factory Contract Address (Deploy once, create multiple markets)
NEXT_PUBLIC_FACTORY_ADDRESS=0x...

# Optional: Single market address (for single-market mode)
NEXT_PUBLIC_CONTRACT_ADDRESS=0x...

# Network
NEXT_PUBLIC_NETWORK=sepolia

# Chain ID (Sepolia = 11155111)
NEXT_PUBLIC_CHAIN_ID=11155111

# RPC URL (Optional - MetaMask will use its own by default)
NEXT_PUBLIC_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# App Configuration
NEXT_PUBLIC_APP_NAME="Zadiction"
NEXT_PUBLIC_APP_DESCRIPTION="Confidential Prediction Markets with FHEVM"
